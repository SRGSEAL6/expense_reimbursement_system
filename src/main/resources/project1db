select * from  reimbursements
select * from  employees;
--drop table reimbursements;
--drop table employees;

create type positions as enum ('MANAGER', 'EMPLOYEE','ADMIN');
create type status as enum ('PENDING','APPROVED','DENIED' );
create table employees (
	emp_id serial primary key,
	emp_name varchar(80) not NULL,
	emp_position positions
);
create table reimbursements (
	reim_id serial primary key,
	emp_name varchar(80),
	emp_id int references employees(emp_id),
	reim_details text,
	reim_status status,
	reim_amount money 
);
-- ////////////////////////////////////////////////////////////////
insert into employees (emp_id, emp_name, emp_position) values(1,'Javi', 'MANAGER');
delete from employees;
insert into reimbursements (emp_name, emp_id, reim_details, reim_status, reim_amount) values ();
alter table reimbursements add column reim_amount real;